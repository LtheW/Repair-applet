
.header-info-container {
    display: flex;
    justify-content: space-between;
  }
  .header-info-container .item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-grow: 1;
    color: white;
  }
  .header-info-container .item .title {
    font-size: 30rpx;
    padding-bottom: 10rpx;
  }
  .header-info-container .item:first-child {
    border-right: 1px solid #ddd;
  }
  .header-info-container .item:last-child {
    border-left: 1px solid #ddd;
  }
  .header-container {
    background-color: #3A63BD;
    height: 300px;
  }
  .avatar-container {
    height: 230px;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    color: #ffffff;
  }
  
  .list{
    margin-top:40rpx ;
    background-color: #fff;
  }
  
  .icon{
    color: rebeccapurple !important;
  }
